<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="290dp"
    android:layout_gravity="center"
    android:background="#77444444"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="You ran away like a coward!"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/fleeDialogText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="You ran away! You may try this same fight again, starting with 25/25 health. Or you can continue fighting and pretend this never happened. If you exit the Arena, you will lose all gold earned this round, and your character will revert to Round 1, Rank 1."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/fleeDialogFleeButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttontryagain" />

        <Button
            android:id="@+id/fleeDialogCancelButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttondonotexitarena" />

        <Button
            android:id="@+id/fleeDialogExitRoundButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonexitarena" />

    </LinearLayout>

</LinearLayout>