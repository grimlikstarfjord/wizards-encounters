<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:id="@+id/abilitiesLayout">
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/abilitiesBackButton"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@drawable/buttondoneleftup" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/abilitiesScreenLabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Abilities"
            android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/classseperator" />

    <TextView
        android:id="@+id/abilitiesScreenEquippedText"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Equipped Abilities (0/8)"
        android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center" android:background="@drawable/selectedclassbackground"/>

    <ListView
        android:id="@+id/abilitiesScreenListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" android:layout_weight="0.5">
    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/classseperator" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:text="Runes"
        android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center" android:background="@drawable/otherclassbackground"/>

    <ListView
        android:id="@+id/abilityRuneList"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" android:layout_weight="0.5">
    </ListView>
    
</LinearLayout>