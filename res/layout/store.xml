<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#002234" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/storeTopLayout">

            <Button
                android:id="@+id/storeLeaveButton"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/buttondoneleftup" />

            <TextView
                android:id="@+id/storeCurrentTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Weapons"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/storeNextTypeButton"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/itembuttonup"
                android:text="Armor >"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical" android:id="@+id/storeTopSortLayout" android:background="#774400">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Show:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/storeSortButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.7"
                android:background="#CCAA33"
                android:text="Only Usable + Affordable" />

        </LinearLayout>

        <ListView
            android:id="@+id/storeToBuyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#444400" >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/storeCurrentGoldText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="400gp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/storeBuyButton"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_margin="3dp"
                android:background="@drawable/buttonbuy" />

        </LinearLayout>
    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/storeDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:allowSingleTap="true"
        android:content="@+id/content"
        android:handle="@+id/storeDrawerButton"
        >

        <Button
            android:id="@+id/storeDrawerButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonopeninventory"
            android:gravity="center"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#555555" >

                <TextView
                    android:id="@+id/storeCurrentPlayerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Hulk&apos;s Inventory"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
            
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical" android:id="@+id/storeDrawerSortLayout" android:background="#774400">


            <TextView
                android:id="@+id/storeDrawerSortNameText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#CCAA33"
                android:clickable="false"
                android:gravity="center"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <TextView
                android:id="@+id/storeDrawerSortLevelText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#CCAA33"
                android:clickable="false"
                android:gravity="center"
                android:text="Level"
                android:textAppearance="?android:attr/textAppearanceMedium" />



            <TextView
                android:id="@+id/storeDrawerSortGoldText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.2"
                android:background="#CCAA33"
                android:clickable="false"
                android:gravity="center"
                android:text="Price"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

            <ListView
                android:id="@+id/storeToSellList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#77AA77" >
            </ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#445599" >

                <TextView
                    android:id="@+id/storeCurrentGoldText2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="400gp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/storeSellButton"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/buttonsell" />

            </LinearLayout>

        </LinearLayout>
    </SlidingDrawer>

</FrameLayout>