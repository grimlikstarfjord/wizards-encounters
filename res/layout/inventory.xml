<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:id="@+id/inventoryLayout">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp">

        <Button
            android:id="@+id/inventoryBackButton"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@drawable/buttondoneleftup" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/inventoryLabel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Inventory"
            android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center" android:layout_weight="1" android:textSize="15sp"/>

        <Button
            android:id="@+id/inventoryForwardButton"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonrunes" android:layout_marginRight="5dp" android:layout_marginTop="5dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/classseperator"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp" android:layout_below="@id/combatPlayerBar" android:id="@+id/combatStatsBar" android:background="#335533" android:gravity="center" android:layout_marginLeft="5dp" android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/inventoryExecText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXEC: 5"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginLeft="5dp" android:layout_weight="1" android:gravity="center"/>

        <TextView
            android:id="@+id/inventoryReactionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REAC: 4"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_weight="1" android:gravity="center"/>

        <TextView
            android:id="@+id/inventoryKnowledgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KNOW: 8"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_weight="1" android:gravity="center"/>

        <TextView
            android:id="@+id/inventoryMageloreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAGE: 3"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_weight="1" android:gravity="center"/>

        <TextView
            android:id="@+id/inventoryLuckText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LUCK: 4"
            android:textAppearance="?android:attr/textAppearanceSmall" android:layout_marginRight="5dp" android:layout_weight="1" android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal" android:layout_weight="0.7" android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" android:layout_weight="0.3" android:gravity="center" android:background="#337733" android:layout_margin="2dp">

            <ImageButton
                android:id="@+id/inventoryWeaponButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" android:scaleType="fitCenter" android:layout_gravity="center" android:src="@drawable/swordofpower" android:background="#00000000" android:layout_weight="0.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" android:layout_weight="0.4" android:gravity="center">

            <ImageButton
                android:id="@+id/inventoryHelmButton"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true" android:src="@drawable/armornohelm" android:scaleType="fitCenter" android:layout_weight="1" android:background="#000033" android:layout_margin="2dp"/>

            <ImageButton
                android:id="@+id/inventoryChestButton"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true" android:scaleType="fitCenter" android:src="@drawable/armornochest" android:layout_weight="1" android:background="#000033" android:layout_margin="2dp"/>

            <ImageButton
                android:id="@+id/inventoryShoesButton"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true" android:scaleType="fitCenter" android:layout_weight="1" android:src="@drawable/armornoshoes" android:background="#000033" android:layout_margin="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" android:layout_weight="0.3">

            <ImageButton
                android:id="@+id/inventoryTrinketButton"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true" android:scaleType="fitCenter" android:src="@drawable/phoenixamulet" android:layout_weight="1" android:background="#000033" android:layout_margin="2dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/inventoryItem1Button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#333300"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/inventoryItem1ChargesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Item 1"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/inventoryItem2Button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#333300"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/inventoryItem2ChargesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Item 2"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/classseperator" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp" android:padding="3dp" android:background="@drawable/background2" android:layout_weight="0.3" android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" android:layout_weight="1" android:gravity="center_vertical" android:paddingLeft="20dp">

            <TextView
                android:id="@+id/inventoryDmgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hit Dmg: 1-12"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/inventoryDodgeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodge: 13%"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/inventoryHPText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP: 35   AP: 15"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" android:gravity="center_vertical" android:paddingRight="20dp">

            <TextView
                android:id="@+id/inventoryHitText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hit: 45%"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
              <TextView
                android:id="@+id/inventoryCritText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crit: 4%"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/inventoryStunText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stun: 8%"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>