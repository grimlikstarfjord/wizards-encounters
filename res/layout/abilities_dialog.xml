<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/abilitiesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipped Abilities"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/monsterHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monster"
            android:textStyle="bold"
            android:textColor="#FFDD66"
            android:paddingTop="6dp"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:id="@+id/monsterAbilitiesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/playerHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player"
            android:textStyle="bold"
            android:textColor="#66CCFF"
            android:paddingTop="10dp"
            android:paddingBottom="4dp" />

        <LinearLayout
            android:id="@+id/playerAbilitiesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

</ScrollView>


