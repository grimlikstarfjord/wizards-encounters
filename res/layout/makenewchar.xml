<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/makenewcharLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.65"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/innbackground" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.45"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/makenewcharTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Character Name"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/makeNewCharInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Welcome, new warrior, to the Arena! Please enter your name and select the class you will be playing as."
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="bottom|center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/makenewcharGoButton"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@drawable/buttondoneleftdisabled" />

            <Button
                android:id="@+id/makenewcharSelectClassButton"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buttonselectclass" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>