<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.alderangaming.wizardsencounters"
	android:installLocation="auto"
	android:versionName="1.0" android:versionCode="1">
	<supports-screens
		android:anyDensity="true"
		android:resizeable="true"
		android:smallScreens="false"
		android:normalScreens="true"
		android:largeScreens="false"
	>
	</supports-screens>
	
	<uses-sdk
		android:minSdkVersion="8"
	></uses-sdk>
	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
	>
		<activity
			android:name=".Start"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".ControllerMakeNewChar"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>
		<activity
			android:name=".ControllerSelectClass"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>		
		<activity
			android:name=".ControllerEquip"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>	
		<activity
			android:name=".ControllerInventory"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>	
		<activity
			android:name=".ControllerStats"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>
		<activity
			android:name=".ControllerAbilities"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>
		<activity
			android:name=".ControllerRoundStart"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>
		<activity
			android:name=".ControllerFightStart"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>
		<activity
			android:name="com.alderangaming.wizardsencounters.ControllerCombat"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>
		<activity
			android:name="com.alderangaming.wizardsencounters.ControllerRoundEnd"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>
		<activity
			android:name="com.alderangaming.wizardsencounters.ControllerStore"
			android:label="@string/app_name"
			android:theme="@android:style/Theme.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
		>
		</activity>
	</application>
</manifest>